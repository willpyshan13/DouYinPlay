<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.will.play.home.ui.viewmodel.HomeHeaderItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp12"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/base_background_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_image_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp22"
            android:layout_marginEnd="@dimen/dp22"
            android:layout_marginTop="@dimen/dp48"
            android:src="@mipmap/base_bg_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/base_bg_search_icon"
            android:layout_marginStart="@dimen/dp22"
            app:layout_constraintStart_toStartOf="@id/home_image_search"
            app:layout_constraintBottom_toBottomOf="@id/home_image_search"
            app:layout_constraintTop_toTopOf="@id/home_image_search"
            tools:ignore="RtlCompat" />

        <com.will.play.widget.banner.BannerView
            android:id="@+id/home_banner"
            android:layout_marginTop="@dimen/dp12"
            app:itemBinding="@{viewModel.bannerItemBinding}"
            app:items="@{viewModel.bannerItems}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_image_search"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dp14"
            android:layout_marginEnd="@dimen/dp14"
            android:layout_height="@dimen/dp132"/>
        
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@mipmap/base_bg_title"
            android:drawableEnd="@mipmap/base_top_news"
            android:drawablePadding="@dimen/dp4"
            android:layout_margin="@dimen/dp12"
            android:layout_marginStart="@dimen/dp12"
            android:textSize="@dimen/sp15"
            app:layout_constraintTop_toBottomOf="@+id/home_banner"
            android:id="@+id/home_banner_bottom_title"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            app:layout_constraintTop_toTopOf="@+id/home_banner_bottom_title"
            android:textSize="@dimen/sp8"
            android:layout_marginEnd="@dimen/dp12"
            app:layout_constraintBottom_toBottomOf="@+id/home_banner_bottom_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_sub_trade_count_total"
            android:background="@mipmap/base_home_top_left"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            app:layout_constraintTop_toBottomOf="@+id/home_banner_bottom_title"
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp94"
            android:layout_marginLeft="@dimen/dp12" />

        <TextView
            android:id="@+id/home_tv_trade_count"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toTopOf="@+id/home_sub_trade_count_total"
            app:layout_constraintStart_toStartOf="@+id/home_sub_trade_count_total"
            android:layout_width="wrap_content"
            android:text="累计交易订单/笔"
            android:textSize="@dimen/sp14"
            android:layout_marginTop="@dimen/dp16"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_tv_trade_count_time"
            app:layout_constraintTop_toBottomOf="@+id/home_tv_trade_count"
            app:layout_constraintStart_toStartOf="@+id/home_sub_trade_count_total"
            android:layout_width="wrap_content"
            android:text='@{"截止"+viewModel.dataObservable.flush_date}'
            android:textSize="@dimen/sp8"
            android:layout_marginStart="@dimen/dp7"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_tv_trade_count_money"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toBottomOf="@+id/home_tv_trade_count_time"
            app:layout_constraintStart_toStartOf="@+id/home_sub_trade_count_total"
            android:layout_width="wrap_content"
            android:text="@{viewModel.dataObservable.order_count}"
            android:textSize="@dimen/sp28"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_sub_trade_count_today"
            android:background="@mipmap/base_home_top_time"
            android:layout_marginStart="@dimen/dp6"
            app:layout_constraintStart_toEndOf="@+id/home_sub_trade_count_total"
            app:layout_constraintTop_toTopOf="@+id/home_sub_trade_count_total"
            android:layout_width="@dimen/dp94"
            android:layout_height="@dimen/dp44"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_tv_trade_count_today"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toTopOf="@+id/home_sub_trade_count_today"
            app:layout_constraintStart_toStartOf="@+id/home_sub_trade_count_today"
            android:layout_width="wrap_content"
            android:text="今日成交订单数"
            android:textSize="@dimen/sp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_tv_trade_count_today_money"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toBottomOf="@+id/home_tv_trade_count_today"
            app:layout_constraintEnd_toEndOf="@+id/home_tv_trade_count_today"
            android:layout_width="wrap_content"
            android:text='@{viewModel.dataObservable.order_count_today + "笔"}'
            android:textSize="@dimen/sp12"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_sub_person_count_today"
            android:background="@mipmap/base_home_top_money"
            android:layout_marginStart="@dimen/dp6"
            app:layout_constraintStart_toEndOf="@+id/home_sub_trade_count_today"
            app:layout_constraintTop_toTopOf="@+id/home_sub_trade_count_total"
            android:layout_width="@dimen/dp94"
            android:layout_height="@dimen/dp44"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_sub_person_count_today_title"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toTopOf="@+id/home_sub_person_count_today"
            app:layout_constraintStart_toStartOf="@+id/home_sub_person_count_today"
            android:layout_width="wrap_content"
            android:text="今日新增人数"
            android:textSize="@dimen/sp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_sub_person_count_today_money"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toBottomOf="@+id/home_sub_person_count_today_title"
            app:layout_constraintEnd_toEndOf="@+id/home_sub_person_count_today_title"
            android:layout_width="wrap_content"
            android:text='@{viewModel.dataObservable.author_count_today+"人"}'
            android:textSize="@dimen/sp12"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_sub_today_money"
            android:background="@mipmap/base_home_top_money"
            android:layout_marginStart="@dimen/dp6"
            android:layout_marginTop="@dimen/dp6"
            app:layout_constraintStart_toEndOf="@+id/home_sub_trade_count_total"
            app:layout_constraintTop_toBottomOf="@+id/home_sub_trade_count_today"
            android:layout_width="@dimen/dp94"
            android:layout_height="@dimen/dp44"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_sub_today_money_title"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toTopOf="@+id/home_sub_today_money"
            app:layout_constraintStart_toStartOf="@+id/home_sub_today_money"
            android:layout_width="wrap_content"
            android:text="今日赚取佣金"
            android:textSize="@dimen/sp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_sub_today_money_money"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toBottomOf="@+id/home_sub_today_money_title"
            app:layout_constraintEnd_toEndOf="@+id/home_sub_today_money_title"
            android:layout_width="wrap_content"
            android:text='@{viewModel.dataObservable.order_pay_today +"元"}'
            android:textSize="@dimen/sp12"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_sub_today_video"
            android:background="@mipmap/base_home_top_time"
            android:layout_marginStart="@dimen/dp6"
            android:layout_marginTop="@dimen/dp6"
            app:layout_constraintStart_toEndOf="@+id/home_sub_trade_count_today"
            app:layout_constraintTop_toBottomOf="@+id/home_sub_trade_count_today"
            android:layout_width="@dimen/dp94"
            android:layout_height="@dimen/dp44"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_sub_today_video_title"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toTopOf="@+id/home_sub_today_video"
            app:layout_constraintStart_toStartOf="@+id/home_sub_today_video"
            android:layout_width="wrap_content"
            android:text="今日种草视频数"
            android:textSize="@dimen/sp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/home_sub_today_video_money"
            android:layout_marginStart="@dimen/dp7"
            app:layout_constraintTop_toBottomOf="@+id/home_sub_today_video_title"
            app:layout_constraintEnd_toEndOf="@+id/home_sub_today_video_title"
            android:layout_width="wrap_content"
            android:text='@{viewModel.dataObservable.order_count_today + "个"}'
            android:textSize="@dimen/sp12"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:drawableStart="@mipmap/base_bg_title"
            android:drawablePadding="@dimen/dp4"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginStart="@dimen/dp14"
            app:layout_constraintTop_toBottomOf="@+id/home_sub_trade_count_total"
            android:id="@+id/home_item_title"
            android:text="@string/home_national"
            android:textSize="@dimen/sp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>