<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:layout_marginStart="@dimen/dp20"
        android:text="请选择您的角色"
        android:textSize="@dimen/sp24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/guide_person_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp50"
        android:button="@null"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/base_guide_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_title" />

    <TextView
        android:id="@+id/guide_person_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要赚钱"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="@+id/guide_person_image"
        app:layout_constraintStart_toStartOf="@+id/guide_person_image"
        app:layout_constraintTop_toBottomOf="@+id/guide_person_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赚取商家视频推广费用"
        app:layout_constraintEnd_toEndOf="@+id/guide_person_image"
        app:layout_constraintStart_toStartOf="@+id/guide_person_image"
        app:layout_constraintTop_toBottomOf="@+id/guide_person_title" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/guide_merchant_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:button="@null"
        android:layout_marginEnd="@dimen/dp50"
        android:checked="true"
        android:background="@drawable/base_guide_merchant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_title" />

    <TextView
        android:id="@+id/guide_merchant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要卖货"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="@+id/guide_merchant_image"
        app:layout_constraintStart_toStartOf="@+id/guide_merchant_image"
        app:layout_constraintTop_toBottomOf="@+id/guide_merchant_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择优质达人推广带货"
        app:layout_constraintEnd_toEndOf="@+id/guide_merchant_image"
        app:layout_constraintStart_toStartOf="@+id/guide_merchant_image"
        app:layout_constraintTop_toBottomOf="@+id/guide_merchant_title" />


    <TextView
        android:id="@+id/guide_btn"
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:textColor="@android:color/white"
        android:text="确认选择"
        android:layout_marginBottom="@dimen/dp20"
        android:background="@drawable/base_blue_circle_btn"
        android:textSize="@dimen/sp20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
